citHeader("To cite ARUtools in publications use:")

citEntry(
  entry    = "ARUtools",
  title    = "ARUtools: a package for ARU data",
  author   = "David Hope",
  url      = "www.github.com/dhope/ARUtools",
  textVersion = paste(
  Hope, David. ARUtools: a package for ARU data. www.github.com/dhope/ARUtools
  )
)
